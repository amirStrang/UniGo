<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/screen_background_dark_transparent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_blue_line">
        <RelativeLayout
            android:id="@+id/titxt"
            android:layout_alignParentTop="true"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/roundedblue_r_2"
            android:layout_centerHorizontal="true">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UniGo"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titxt"
            android:padding="10dp">
            <TextView
                android:id="@+id/how"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="برای این قسمت ، از حساب شما سکه کسر خواهد شد"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/deny"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="نه ، منصرف شدم"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/deny_cost"

                />
            <TextView
                android:id="@+id/accept"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="باشه ، بزن بریم "
                android:textSize="17sp"
                android:textColor="#ffffff"

                android:gravity="center"
                android:textAlignment="center"
                android:padding="5dp"
                android:background="@drawable/accept_cost"

                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>